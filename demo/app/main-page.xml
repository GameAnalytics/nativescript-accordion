<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
      xmlns:accordion="nativescript-accordion">
    <StackLayout class="p-20">
        <Button text="View Multi Template" tap="goToMulti"/>
        <accordion:Accordion iosEstimatedItemHeaderRowHeight="400" height="100%" items="{{items}}" allowMultiple="false" selectedIndexes="{{selectedIndexes}}">

            <accordion:Accordion.headerTemplate>
                <StackLayout>
                    <Label backgroundColor="green" text="{{headerText}}"/>
                </StackLayout>
            </accordion:Accordion.headerTemplate>


            <accordion:Accordion.itemHeaderTemplate>
                <GridLayout backgroundColor="white">
                    <Label height="100%" text="{{title}}"/>
                </GridLayout>
            </accordion:Accordion.itemHeaderTemplate>

            <accordion:Accordion.itemContentTemplate>
                <StackLayout>
                    <Image decodeWidth="400" decodeHeight="400" loadMode="async" src="{{image}}"/>
                    <Label text="{{text}}"/>
                </StackLayout>
            </accordion:Accordion.itemContentTemplate>


            <accordion:Accordion.footerTemplate>
                <StackLayout>
                    <Label backgroundColor="yellow" text="{{footerText}}"/>
                </StackLayout>
            </accordion:Accordion.footerTemplate>
        </accordion:Accordion>
    </StackLayout>
</Page>