{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": false
    },
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "lib": [
        "es6",
        "dom"
    ],
    "baseUrl": ".",
    "paths": {
        "*": [
            "./node_modules/tns-core-modules/*",
            "./node_modules/*"
        ]
    }
}